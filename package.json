{
  "name": "discord-menus",
  "version": "1.0.0",
  "description": "Create beautiful menus in Discord, with ease!",
  "main": "/src/index.ts",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RemyK888/discord-menus.git"
  },
  "keywords": [
    "discord-menus",
    "discord",
    "discord.js",
    "discord api",
    "discord buttons",
    "discord menu"
  ],
  "author": "RemyK",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/RemyK888/discord-menus/issues"
  },
  "homepage": "https://github.com/RemyK888/discord-menus#readme",
  "devDependencies": {
    "@types/node-fetch": "^2.5.10",
    "@types/ws": "^7.4.6",
    "prettier": "^2.3.0",
    "ts-node": "^10.0.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "discord.js": "^12.5.3",
    "node-fetch": "^2.6.1"
  }
}
